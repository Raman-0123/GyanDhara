# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-generated-jwt-secret-here

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,https://your-vercel-app.vercel.app

# AI Services (Choose one or both)
# Google Gemini API (60 requests/min free)
GEMINI_API_KEY=your-gemini-api-key-here

# Hugging Face API (1000 requests/day free)
HF_TOKEN=your-huggingface-token

# Cloudinary (25GB free storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Upstash Redis (10K commands/day free)
REDIS_URL=rediss://default:password@endpoint.upstash.io:6379

# Translation API
LINGVA_TRANSLATE_URL=https://lingva.ml/api/v1

# Email Configuration (optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# File Upload Limits
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# ============================================================================
# OFFLINE PREPROCESSING & GITHUB INTEGRATION
# ============================================================================

# GitHub Configuration for Data Storage
GITHUB_OWNER=your-github-username
GITHUB_REPO=gyandhara-data
GITHUB_BRANCH=main
GITHUB_TOKEN=ghp_your_personal_access_token_here

# Tesseract OCR Configuration
TESSDATA_PREFIX=/opt/homebrew/share/tessdata

# Processing Configuration (from preprocessing.config.js)
# No additional env vars needed - see backend/config/preprocessing.config.js
